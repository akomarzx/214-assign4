<%- layout('./layouts/mainLayout.ejs') %>
    <div class="row h-100 d-flex justify-content-center mt-2">
        <div class="col-md px-0">
            <div class="row">
                <h1 class="text-center">Edit Product</h1>
            </div>
            <div class="row">
                <div class="col-md-4 ms-2">
                    <form action="/bb-products/?_method=PATCH" method="post">
                        <div class="form-group mb-3">
                            <label for="productId" class="form-label">Product Name</label>
                            <select name="productId" id="productId" class="form-select">
                                <% for( let i=0; i < products.length; i++ ) { %>
                                    <option value=<%- products[i].IDPRODUCT%>>
                                        <%- products[i].PRODUCTNAME %>
                                    </option>
                                    <% } %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="newDescription" class="form-label">New Description</label>
                            <textarea class="form-control" id="newDescription" rows="3"
                                name="newDescription"></textarea>
                        </div>
                        <div class="my-2">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a href="/">
                                <button type="button" class="btn btn-warning">Cancel</button>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>